<div class="container">
    <h3>Dashboard</h3>
    <p>Edit track settings to customize this page.</p>
    <div class="track-percent-stats">
        <h4>Top Tracks</h4>
        <div class="row">
            <div class="col-xs-12 col sm-6 col-md-3 percent-stat-box">
                <h5>Rain</h5>
                <div class="progress">
                    <div class="progress-bar" role="progress-bar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">20%</div>
                </div>
            </div>
            <div class="col-xs-12 col sm-6 col-md-3 percent-stat-box">
                <h5>Storm</h5>
                <div class="progress">
                    <div class="progress-bar" role="progress-bar" aria-valuenow="19" aria-valuemin="0" aria-valuemax="100" style="width: 19%">19%</div>
                </div>
            </div>
            <div class="col-xs-12 col sm-6 col-md-3 percent-stat-box">
                <h5>Cloud</h5>
                <div class="progress">
                    <div class="progress-bar" role="progress-bar" aria-valuenow="16" aria-valuemin="0" aria-valuemax="100" style="width: 16%">16%</div>
                </div>
            </div>
            <div class="col-xs-12 col sm-6 col-md-3 percent-stat-box">
                <h5>Snow</h5>
                <div class="progress">
                    <div class="progress-bar" role="progress-bar" aria-valuenow="12" aria-valuemin="0" aria-valuemax="100" style="width: 12%">12%</div>
                </div>
            </div>
        </div>
    </div>
    <div class="update-tracks">
        <h4>Update Track List</h4>
        <form class="form-inline" role="form">
            <input type="text" class="new-track form-control" placeholder="New track..." />
            <div class="update-track-button btn btn-default">Add & Refresh Server</div>
        </form>
        
    </div>
    <div class="track-heatmap">
        <h4>Track Heatmap</h4>
        <div class="row">
            <!-- heatmap content -->
        </div>
    </div>
    <div class="incoming-tweets">
        <h4 class="toggle-incoming">Incoming Tweets &middot; <span class="toggle-incoming-button glyphicon glyphicon-pause"></span></h4> 
        <h4 class="showing-tracks">Currently Showing: <span class="income-tweet-text"></span></h4>
        <div class="income-tweet-container"></div>
    </div>
</div>